<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@drawable/background_bottom"
    android:padding="20dp"
    android:layout_marginTop="150dp"
    android:layout_centerHorizontal="true"
    android:layout_marginHorizontal="10dp"
    android:id="@+id/id_layout_bottom">

    <TextView
        android:id="@+id/txt_judul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Perhatian !!!"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_ket"
        android:text="Apakah Sampel ini diambil pada Sapi yang sama ? "
        android:layout_below="@id/txt_judul"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:textStyle="italic"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_ket"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:id="@+id/layout_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="5dp">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnYa"
            android:text="YA"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnTidak"
            android:text="TIDAK"
            />

    </LinearLayout>


</RelativeLayout>